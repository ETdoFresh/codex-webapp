{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist/server",
    "types": ["node"],
    "noEmit": false,
    "declaration": false
  },
  "include": [
    "src/index.ts",
    "src/backend/**/*",
    "src/shared/**/*"
  ]
}
