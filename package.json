{
  "name": "codex-webapp-monorepo",
  "version": "0.3.0",
  "private": true,
  "workspaces": [
    "apps/main-app",
    "apps/container-app",
    "apps/shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@codex-webapp/main-app",
    "dev:main": "npm run dev --workspace=@codex-webapp/main-app",
    "dev:container": "npm run dev --workspace=@codex-webapp/container-app",
    "build": "npm run build --workspaces --if-present",
    "build:main": "npm run build --workspace=@codex-webapp/main-app",
    "build:container": "npm run build --workspace=@codex-webapp/container-app",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
